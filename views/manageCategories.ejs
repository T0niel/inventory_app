<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/reset.css" />
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <title>Manage categories</title>
  </head>
  <body>
    <%- include('partials/filledNav.ejs', {}) %>

    <div class="manage-top">
      <div class="categories-container">
        <ul class="categories">
          <% categories.forEach((category) => { %>
          <li
            class="categories-item flex <%= locals.selected && locals.selected === category ? 'selected-category-item' : '' %>"
          >
            <p><%= category %></p>
            <a href="/category/delete?category=<%=category%>" class="minus-btn">
              <img
                src="/images/icons/minus.png"
                alt="remove"
                width="15px"
                height="15px"
              />
            </a>
          </li>
          <% }) %>
        </ul>
      </div>
    </div>
    <div>
      <form action="/category/create" method="post">
        <div class="inputs">
          <div class="input-wrapper">
            <label for="name">Category Name:*</label>
            <input type="text" placeholder="Engines" name="name" id="name" />
          </div>
          <div class="input-wrapper">
            <label for="password">Admin Password:*</label>
            <input type="password" name="password" id="password" />
          </div>
          <div class="input-wrapper">
            <ul class="error-list">
              <% if(locals.errors){ locals.errors.forEach((error) => {%>
              <li class="error">- <%=error.msg%></li>
              <%}) } %>
            </ul>
            <button type="submit" class="submit">Create</button>
          </div>
        </div>
      </form>
    </div>
  </body>
</html>
